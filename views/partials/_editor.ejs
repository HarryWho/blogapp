<div class="card-body">
  <h4 class="card-title text-center">
    <%=caption%> Article</h4>

  <p class="card-text">
    <form action="<%=action%>" method="POST">
      <input type="hidden" name="author" value="<%= user._id %>">
      <fieldset>

        <div class="form-group">
          <label for="title" class="form-label mt-1">Title</label>
          <input type="text" class="form-control" name="title" id="title" aria-describedby="emailHelp" placeholder="Article Title" value="<%- typeof article!='undefined' ? article.title: '' %>">

        </div>
        <div class="form-group">
          <label for="status" class="form-label mt-1">Status</label>
          <select name="status" class="form-control" id="status">
              <option value="public" <%- typeof article!='undefined'&&article.status=='public' ? 'selected' : '' %>>Public</option>
              <option value="private" <%- typeof article!='undefined'&&article.status=='private' ? 'selected' : '' %>>Private</option>
          </select>
        </div>
        <div class="form-group">
          <label for="article" class="form-label mt-1">Article</label>
          <textarea name="article" class="form-control" id="article"><%- typeof article!='undefined' ? article.article : '' %></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn d-block btn-primary my-3"><%=caption%> Article</button>
        </div>
      </fieldset>
    </form>
  </p>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor/4.19.0/ckeditor.js" integrity="sha512-tjxUra6WjSA8H5+nC7G61SVqEXj1e958LdR4N8BGZeRx9tObm/YhsrUzY6tH4EuHQyZqOyu317pgV7f8YPFoAQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
  CKEDITOR.replace('article')
</script>